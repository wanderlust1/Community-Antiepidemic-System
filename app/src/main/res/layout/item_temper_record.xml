<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_red_round_corner"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingTop="8dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_item_temper_temper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/tv_item_temper_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#F1F1F1"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/tv_item_temper_temper"
        app:layout_constraintTop_toTopOf="@id/tv_item_temper_temper"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_temper_temper"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/iv_item_temper_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_temper_temper"
        android:src="@drawable/ic_baseline_arrow_right_24"/>

    <TextView
        android:id="@+id/tv_item_temper_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="270dp"
        android:textColor="#fff"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="@id/iv_item_temper_1"
        app:layout_constraintLeft_toRightOf="@id/iv_item_temper_1"/>

    <ImageView
        android:id="@+id/iv_item_temper_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_temper_status"
        android:src="@drawable/ic_baseline_arrow_right_24"/>

    <TextView
        android:id="@+id/tv_item_temper_diagnose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="270dp"
        android:textColor="#fff"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/iv_item_temper_2"
        app:layout_constraintLeft_toRightOf="@id/iv_item_temper_2"/>

    <ImageView
        android:id="@+id/iv_item_temper_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_temper_diagnose"
        android:src="@drawable/ic_baseline_arrow_right_24"/>

    <TextView
        android:id="@+id/tv_item_temper_approach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="270dp"
        android:textColor="#fff"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/iv_item_temper_3"
        app:layout_constraintLeft_toRightOf="@id/iv_item_temper_3"/>

    <ImageView
        android:id="@+id/iv_item_temper_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>